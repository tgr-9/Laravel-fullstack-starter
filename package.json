{
    "private": true,
    "engines": {
        "node": "14.x || 16.x"
    },
    "scripts": {
        "build": "mix --production",
        "dev": "mix",
        "hot": "mix watch --hot",
        "prepare": "husky install scripts/husky",
        "watch": "mix watch",
        "watch:poll": "mix watch -- --watch-options-poll=1000"
    },
    "dependencies": {
        "@sentry/browser": "^7.1.1",
        "@sentry/tracing": "^7.1.1",
        "date-fns": "^2.28.0"
    },
    "devDependencies": {
        "@antfu/eslint-config-ts": "^0.25.1",
        "@babel/core": "^7.17.8",
        "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@commitlint/cli": "^17.0.2",
        "@feryardiant/commitlint-config": "^0.2.0",
        "@tailwindcss/forms": "^0.5.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^0.27.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.17.0",
        "husky": "^8.0.1",
        "laravel-mix": "^6.0.6",
        "lint-staged": "^13.0.1",
        "lodash": "^4.17.19",
        "postcss": "^8.4.6",
        "postcss-import": "^14.0.2",
        "tailwindcss": "^3.0.18",
        "typescript": "^4.7.3",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "commitlint": {
        "extends": [
            "@feryardiant/commitlint-config"
        ]
    },
    "lint-staged": {
        "{resources,scripts}/**/*.{ts,js,css}": [
            "eslint --fix"
        ],
        "{app,database}/**/*.php": [
            "php vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php --allow-risky yes"
        ]
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "browser": true
        },
        "extends": "@antfu/ts",
        "rules": {}
    }
}
